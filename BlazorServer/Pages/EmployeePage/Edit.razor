@page "/employee/edit/{Id}"
@inherits BaseClass.EmployeeBC.Edit

<EditForm Model="@EmployeeVM" OnValidSubmit="Submit">
    <DataAnnotationsValidator />

    <h3>Edit Employee</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label class="col-2 col-form-label">First Name</label>
        <div class="col-10">
            <InputText class="form-control" placeholder="First Name" @bind-Value="EmployeeVM.FirstName"></InputText>
            <ValidationMessage For="@(() => EmployeeVM.FirstName)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-2 col-form-label">Last Name</label>
        <div class="col-10">
            <InputText class="form-control" placeholder="Last Name" @bind-Value="EmployeeVM.LastName"></InputText>
            <ValidationMessage For="@(() => EmployeeVM.LastName)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-2 col-form-label">Email</label>
        <div class="col-10">
            <InputText class="form-control" placeholder="Email Address" @bind-Value="EmployeeVM.Email"></InputText>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-2 col-form-label">Department</label>
        <div class="col-10">
            <InputSelect class="form-control" @bind-Value="EmployeeVM.DepartmentId">
                @foreach (var department in Departments)
                {
                    <option value="@department.Id">@department.Name</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-2 col-form-label">Gender</label>
        <div class="col-10">
            <InputSelect class="form-control" @bind-Value="EmployeeVM.Gender">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-2 col-form-label">Date Of Birth</label>
        <div class="col-10">
            <InputDate @bind-Value="EmployeeVM.DOB" class="form-control"></InputDate>
        </div>
    </div>
    @if (btnLoading)
    {
        <button type="submit" disabled class="btn btn-outline-primary">Processing...</button>
    }
    else
    {
        <button type="submit" class="btn btn-outline-primary">Submit</button>
    }
</EditForm>
